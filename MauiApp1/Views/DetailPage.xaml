<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.DetailPage"
             Title="DetailPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Button Text="Back" BackgroundColor="BlueViolet" TextColor="White" WidthRequest="80"  HorizontalOptions="Start"
     Clicked="BacktoHomePage"/>
            <Label Text="{Binding SelectedPost.Title}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding SelectedPost.Body}" FontSize="16" />
           
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>